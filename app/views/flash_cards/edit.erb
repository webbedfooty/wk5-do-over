<h1>Edit Flash Card</h1>

<% if @flash_card.errors.any? %>
  <div>
    <h2>Errors:</h2>
    <ul>
      <% @flash_card.errors.full_messages.each do |e| %>
        <li><%= e %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<form action="/flash-cards/<%= @flash_card.id %>" method="post">
  <input type="hidden" name="_method" value="patch">
  <div>
    Question:
    <input type="textarea" name="question" value="<%= @flash_card.question %>">
  </div>
  <div>
    Answer:
    <input type="textarea" name="answer" value="<%= @flash_card.answer %>">
  </div>
  <div>
    <input type="submit" value="Update Flash Card">
  </div>

</form>
